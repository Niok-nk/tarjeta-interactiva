---
import Info from './Info.astro';
import Logo from './Logo.astro';

---
<main>
	<div>
		<slot name="logo" />
		<slot name="info" />

	</div>
</main>
<style>
	main{

		display: flex;
		justify-content: center; 
		align-items: center;     
		height: 100dvh;    
	}
	div{
		position: relative;
		display: flex;
		flex-direction: row;
		align-items: center;
		background-color: var(--bg);
		width: 62.5rem;
		height: 25rem;
		border-radius: 2rem;
		box-shadow: 
			-20px -20px 70px rgb(255, 255, 255),
			10px 10px 70px rgba(0, 0, 0, 0.2);
		padding: 1.5rem;
		


	}


</style>

---
interface Props {
	title: string;
    content: string;

}

const { title, content} = Astro.props;
---
<div>
<p><strong>{title}</strong></p>
<p>{content}</p>
</div>

<style>
    div{
        display: flex;
        flex-direction: row;
        p strong{
            display: inline;
            margin-right: 10px;
        }
    }
</style>
